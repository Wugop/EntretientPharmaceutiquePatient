<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="250px"
    android:layout_height="250px"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="213px"
        android:layout_height="214px"
        app:cardCornerRadius="10px">

        <ImageView
            android:id="@+id/image_reponse_question_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_reponse_question_image"
            android:layout_margin="20px" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_reponse_question_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/TextQuestionColor"
        android:layout_marginTop="10px" />

</LinearLayout>