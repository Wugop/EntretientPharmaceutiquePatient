<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    tools:context=".activity.InformationPerso">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="190px">

        <com.google.android.material.card.MaterialCardView
            style="@style/layout_card_question"
            android:layout_width="700px"
            android:layout_height="680px"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="115px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="550px"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_card_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profil" />

                    <View
                        style="@style/grey_line"
                        android:layout_marginBottom="30px" />

                    <TextView
                        style="@style/text_profil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textSize="25px" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/text_input_profil"
                        app:placeholderText="Dupont">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profil_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        style="@style/text_profil"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Prénom"
                        android:textSize="25px" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/text_input_profil"
                        app:placeholderText="Jean">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/profil_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="textPersonName" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="175px"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginRight="20px"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/text_profil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Naissance"
                                    android:textSize="25px" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/text_input_profil"
                                    android:clickable="false"
                                    android:cursorVisible="false"
                                    android:focusable="false"
                                    android:focusableInTouchMode="false"
                                    app:placeholderText="01/01/1975">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/profil_birthday"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:clickable="false"
                                        android:cursorVisible="false"
                                        android:focusable="false"
                                        android:focusableInTouchMode="false" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="165px"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20px"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/text_profil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Poids"
                                    android:textSize="25px" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/text_input_profil"
                                    app:placeholderText="75"
                                    app:suffixText="kg">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/profil_weight"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:digits="0123456789"
                                        android:inputType="number"
                                        android:maxLength="3" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="170px"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/text_profil"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Taille"
                                    android:textSize="25px" />

                                <com.google.android.material.textfield.TextInputLayout
                                    style="@style/text_input_profil"
                                    app:placeholderText="180"
                                    app:suffixText="cm">

                                    <com.google.android.material.textfield.TextInputEditText
                                        android:id="@+id/profil_height"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:digits="0123456789"
                                        android:inputType="number"
                                        android:maxLength="3" />

                                </com.google.android.material.textfield.TextInputLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/layout_card_question"
            android:layout_width="1000px"
            android:layout_height="680px"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="false"
            android:layout_centerVertical="true"
            android:layout_marginRight="115px">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="830px"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="vertical">

                    <TextView
                        style="@style/title_card_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/informations" />

                    <View
                        style="@style/grey_line"
                        android:layout_marginBottom="30px" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="20px"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Adresse"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/text_input_profil"
                                android:layout_width="340px"
                                app:placeholderText="92 rue Descarte">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profil_adress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPostalAddress" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20px"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Code Postal"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/text_input_profil"
                                android:layout_width="170px"
                                app:placeholderText="59000">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profil_postcode"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:digits="0123456789+"
                                    android:inputType="number"
                                    android:maxLength="5" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ville"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/text_input_profil"
                                android:layout_width="match_parent"
                                app:placeholderText="Lille">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profil_city"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="20px"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Numéro de sécurité sociale"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/text_input_profil"
                                android:layout_width="500px"
                                app:placeholderText="1 75 01 49 588 157 80">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profil_social_security_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:maxLength="21" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Régime d’affiliation"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/drop_down_menu_profil"
                                app:placeholderText="Régime général">

                                <AutoCompleteTextView
                                    android:id="@+id/auto_complete_profil"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="20px"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Numéro de téléphone"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/text_input_profil"
                                android:layout_width="340px"
                                app:placeholderText="01 01 01 01 01">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profil_phone_number"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:digits="0123456789+"
                                    android:inputType="phone"
                                    android:maxLength="14" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                style="@style/text_profil"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Sujet de l'entretien"
                                android:textSize="25px" />

                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/text_input_profil"
                                android:layout_width="match_parent"
                                app:placeholderText="Diabète">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profil_subject_interview"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="text" />

                            </com.google.android.material.textfield.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>


        <Button
            android:id="@+id/profil_next_question"
            android:layout_width="230px"
            android:layout_height="80px"
            android:elevation="10px"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="Suivant" />

    </RelativeLayout>

</RelativeLayout>
