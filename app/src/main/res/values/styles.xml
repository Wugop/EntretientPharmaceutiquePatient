<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="group_label" parent="Widget.AppCompat.TextView">
        <item name="android:text">@string/label_groupe</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/labelColor</item>
        <item name="android:textSize">30px</item>
    </style>
    
    <style name="question_label" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/label_question</item>
        <item name="android:textSize">23px</item>
        <item name="android:textColor">@color/labelColor</item>
    </style>

    <style name="question_field" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">65px</item>
        <item name="android:background">@drawable/text_field</item>
        <item name="android:hint">@string/placeholder</item>
        <item name="android:textColorHint">@color/plaholderColor</item>
        <item name="android:textSize">23px</item>
        <item name="android:paddingLeft">20px</item>
    </style>

    <style name="button" parent="TextAppearance.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">255px</item>
        <item name="android:layout_weight">match_parent</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/button</item>
        <item name="android:elevation">10px</item>
        <item name="android:text">@string/button_suiv</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">30px</item>
    </style>

    <style name="group_content" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">80px</item>
    </style>
</resources>