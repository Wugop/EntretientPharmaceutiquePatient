<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_card_question" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">35px</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
        <item name="android:textColor">@color/labelColor</item>
    </style>

    <style name="layout_card_question" parent="CardView">
        <item name="android:layout_width">@dimen/question_width</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">visible</item>
        <item name="cardCornerRadius">15px</item>
        <item name="cardBackgroundColor">@color/backgroundCards</item>
        <item name="cardElevation">10px</item>
        <item name="strokeColor">@color/backgroundCards</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="grey_line" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">440px</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_marginTop">11px</item>
        <item name="android:background">@color/headerLineColor</item>
    </style>

    <style name="layout_text_question" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">10px</item>
        <item name="android:layout_marginBottom">15px</item>
        <item name="android:paddingEnd">72px</item>
        <item name="boxBackgroundColor">@color/fieldColor</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="text_input_profil" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">45px</item>
        <item name="boxBackgroundColor">@color/fieldColor</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">10px</item>
        <item name="boxCornerRadiusBottomStart">10px</item>
        <item name="boxCornerRadiusTopEnd">10px</item>
        <item name="boxCornerRadiusTopStart">10px</item>
        <item name="boxStrokeColor">@color/labelColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="placeholderTextColor">@color/placeholderText</item>
    </style>

    <style name="drop_down_menu_profil" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">45px</item>
        <item name="boxBackgroundColor">@color/fieldColor</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxCornerRadiusBottomEnd">10px</item>
        <item name="boxCornerRadiusBottomStart">10px</item>
        <item name="boxCornerRadiusTopEnd">10px</item>
        <item name="boxCornerRadiusTopStart">10px</item>
        <item name="boxStrokeColor">@color/labelColor</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="placeholderTextColor">@color/placeholderText</item>
    </style>

    <style name="text_profil" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/labelColor</item>

    </style>

</resources>